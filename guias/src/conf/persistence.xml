<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="guiasPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.Entidades.Permisos</class>
    <class>com.Entidades.Roles</class>
    <class>com.Entidades.Usuarios</class>
    <class>com.Controladoras.Miembro</class>
    <class>com.Controladoras.Permisos</class>
    <class>com.Controladoras.Roles</class>
    <class>com.Controladoras.UsuariosRoles</class>
    <class>com.Controladoras.Usuarios</class>
    <class>com.Controladoras.RolesPermisos</class>
    <class>com.Entidades.RolesPermisos</class>
    <class>com.Entidades.UsuariosRoles</class>
    <class>com.Dao.Usuarios</class>
    <class>com.Dao.Permisos</class>
    <class>com.Dao.Roles</class>
    <class>com.Dao.Miembro</class>
    <class>com.Entidades.Rol</class>
    <class>com.Entidades.Usuario</class>
    <class>com.Entidades.Miembro</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/guias?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
